#:kivy 1.8.0
#:import utils kivy.utils

<MyButton@Button>:
    on_press:
        app.root.btn_conspect_click(self.text)

<MyTreeViewLabel@TreeViewLabel>
    on_touch_down:
        app.root.tv_touch(self.uid)

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        MyFileChooserListView:
            id: filechooser
            path: self.startpath
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Отмена"
                on_release: root.cancel()
            Button:
                text: "Выбрать"
                on_release: root.loaddb(filechooser.path, filechooser.selection)

<LoadYoutubeDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        GridLayout:
			cols:4
            size_hint_y: None
            height: 30
			CheckBox:
				group: "lecture_type"
				width: dp(40)
                size_hint_x: None
				active: True
				on_active: root.checkbox_click(self, self.active, "youtube")
			Label:
				text: "Youtube видео"
                halign: "left"
                valign: "middle"
                text_size: self.size
			CheckBox:
				group: "lecture_type"
				width: dp(40)
                size_hint_x: None
				on_active: root.checkbox_click(self, self.active, "pdf")
			Label:
				text: "Файл pdf"
                halign: "left"
                valign: "middle"
				text_size: self.size
		BoxLayout:
            size_hint_y: None
            height: dp(30)
            Label:
                text: 'Youtube id'
                size_hint_x: None
                width: dp(130)
            TextInput:
                id: video_id
                text: ''
                multiline: False
            Label:
                id: video_id_check
                text: ''
                size_hint_x: None
                width: dp(30)
		BoxLayout:
            size_hint_y: None
            height: dp(30)
            Label:
                text: 'Название лекции'
                size_hint_x: None
                width: dp(130)
            TextInput:
                id: video_name
                text: ''
                multiline: False
            Label:
                id: video_name_check
                text: ''
                size_hint_x: None
                width: dp(30)
        MyFileChooserListView:
            id: filechooser
            path: self.startpath
            disabled: True
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Отмена"
                on_release: root.cancel()
            Button:
                text: "Выбрать"
                on_release: root.ok_click(video_id.text, video_name.text, filechooser.path, filechooser.selection)
                #on_release: root.loadyotube(filechooser.path, filechooser.selection)
<MyGrid>
    tag: tag
    GridLayout:
        cols:1
        size: root.width, root.height
        PageLayout:
            BoxLayout:
                orientation: 'vertical'
                canvas:
                    Color:
                        rgba: (0.5, 0.5, 0.9, 1)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: dp(40)
                    Button:
                        text: '+'
                        font_size: dp(40)
                        height: dp(40)
                        width: dp(40)
                        size_hint_y: None
                        size_hint_x: None
                        on_release: root.show_load_youtube_dialog()
                    Spinner:
                        id: lecture
                        height: dp(40)
                        size_hint_y: None
                        text: "Файл стенограммы"
                        on_text: root.spn_lecture_click(lecture.text)
                Label:
			        id: file_id_time
			        text: "Pick Favorite Pizza Below"
        			height: dp(40)
        			size_hint_y: None
                ScrollView:
                    id: scroller
                    do_scroll: False, True
                    bar_width: dp(10)
                    scroll_type: ['bars','content']
                    TextInput:
                        id: transcript_text
                        size_hint: (None, None)
                        height: max(self.minimum_height, scroller.height)
                        width: scroller.width
                        text: ''
                        multiline: True
                        hint_text: '^ Выберите файл лекции ^'
                        readonly: True
                        #on_text: root.transcript_text_changed()
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: dp(40)
                    Button:
                        text: '+'
                        font_size: dp(40)
                        height: dp(40)
                        width: dp(40)
                    Button:
                        text: '<'
                        font_size: dp(40)
                        height: dp(40)
                        width: dp(40)
                    Button:
                        text: '>'
                        font_size: dp(40)
                        height: dp(40)
                        width: dp(40)
                    Button:
                        text: '-'
                        height: dp(40)
                        font_size: dp(40)
                        height: dp(40)
                        width: dp(40)
                TextInput:
                    id: short_text
                    text: ''
                    multiline: True
                    height: dp(120)
                    size_hint_y: None
                Label:
			        id: tag_path
			        text: ""
        			height: dp(40)
        			size_hint_y: None
            BoxLayout:
                orientation: 'vertical'
                canvas:
                    Color:
                        rgba: (0.5, 0.9, 0.5, 1)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: dp(40)
                    Button:
                        id: btn_tvedit_change
                        text: 'Добавление'
                        size_hint_y: None
                        size_hint_x: None
                        width: dp(130)
                        height: dp(40)
                        on_release: app.root.btn_tvedit_change_click()
                    Button:
                        id: btn_tvedit_minus
                        text: ''
                        font_size: dp(40)
                        height: dp(40)
                        width: dp(40)
                        size_hint_y: None
                        size_hint_x: None
                        disabled: True
                        on_release: app.root.btn_tvedit_minus_click()
                    TextInput:
                        id: tvedit_text
                        text: ''
                        multiline: False
                        height: dp(40)
                        size_hint_y: None
                        on_text: app.root.tvedit_text_click()
                    Button:
                        id: btn_tvedit_plus
                        text: '+'
                        font_size: dp(40)
                        size_hint_y: None
                        size_hint_x: None
                        height: dp(40)
                        width: dp(40)
                        on_release: app.root.btn_tvedit_plus_click()
                ScrollView:
                    do_scroll: False, True
                    bar_width: dp(10)
                    scroll_type: ['bars','content']
                    MyTreeView:
                        id: tag
                        size_hint_y: None
                        root_options: {'text': ' '}
                        hide_root: True
                        height: self.minimum_height
                RecycleView:
                    size_hint_y: None
                    height: dp(120)
                    id: mention
                    viewclass: 'MyButton'
                    data: [{'text':'один'},{'text': 'два'},{'text': 'три'},{'text': 'пять'},{'text': 'десять'}]
                    RecycleBoxLayout:
                        default_size: None, dp(40)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
                Label:
                    id: short_text_from_tag
                    text: ''
                    multiline: True
                    height: dp(120)
                    size_hint_y: None
            BoxLayout:
                orientation: 'vertical'
                canvas:
                    Color:
                        rgba: (0.9, 0.5, 0.5, 1)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Button:
                    id: path2mytetra
                    text: 'Путь к файлу импорта'
                    height: dp(40)
                    on_release: root.show_loaddb_dialog()

